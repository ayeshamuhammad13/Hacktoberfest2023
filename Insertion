<!DOCTYPE html>
<html>
<head>
    <title>Insertion Sort Example</title>
</head>
<body>
    <h1>Insertion Sort Example</h1>

    <p>Unsorted Array: 5, 1, 4, 2, 8</p>

    <button onclick="insertionSort()">Sort Array</button>

    <p>Sorted Array: <span id="sortedArray"></span></p>

    <script>
        function insertionSort() {
            let array = [5, 1, 4, 2, 8];
            let n = array.length;

            for (let i = 1; i < n; i++) {
                let key = array[i];
                let j = i - 1;

                while (j >= 0 && array[j] > key) {
                    array[j + 1] = array[j];
                    j = j - 1;
                }

                array[j + 1] = key;
            }

            document.getElementById("sortedArray").innerText = array.join(', ');
        }
    </script>
</body>
</html>
